@model IEnumerable<LibraryApp.Models.ViewModel.CategoryBookAuthors>

@{
    ViewData["Title"] = "Index";
}

<h1>Books</h1>

<p>
    <a asp-action="Create">Create New </a>
</p>

<!-- Tabs for each Category and All Products -->
<ul class="nav nav-tabs" id="categoryTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link @(Model.FirstOrDefault()?.Category.CategoryId == null ? "active" : "")" id="tab-all-products" data-bs-toggle="tab" data-bs-target="#all-products" type="button" role="tab" aria-controls="all-products" aria-selected="@(Model.FirstOrDefault()?.Category.CategoryId == null ? "true" : "false")">
            All Books
        </button>
    </li>

    @foreach (var categoryItem in Model)
    {
        <li class="nav-item" role="presentation">
            <button class="nav-link @(categoryItem.Category.CategoryId == Model.First().Category.CategoryId ? "active" : "")" id="tab-@categoryItem.Category.CategoryId" data-bs-toggle="tab" data-bs-target="#category-@categoryItem.Category.CategoryId" type="button" role="tab" aria-controls="category-@categoryItem.Category.CategoryId" aria-selected="@(categoryItem.Category.CategoryId == Model.First().Category.CategoryId ? "true" : "false")">
                @categoryItem.Category.CategoryName
            </button>
        </li>
    }
</ul>
@* All Books*@
<div class="tab-content" id="categoryTabsContent">
    <div class="tab-pane fade @(Model.FirstOrDefault()?.Category.CategoryId == null ? "show active" : "")" id="all-products" role="tabpanel" aria-labelledby="tab-all-products">
        <div class="row mt-3">
            @if (Model.SelectMany(c => c.Books).Any())
            {
                @foreach (var bookItem in Model.SelectMany(c => c.Books))
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">@bookItem.Book.Title</h5>
                                @* <p class="card-text">@bookItem.Book.Description</p> *@
                                    @foreach (var author in bookItem.Authors)
                                    {
                                    <p>@author.FirstName @author.LastName</p>
                                    }
                                <p class="card-text">@bookItem.Book.Category.CategoryName</p>
                            </div>
                            <div class="card-footer">
                                <!-- Action Buttons -->
                                <a asp-controller="Book" asp-action="Edit" asp-route-id="@bookItem.Book.BookId" class="btn btn-primary btn-sm">Edit</a>
                                <a asp-controller="Book" asp-action="Details" asp-route-id="@bookItem.Book.BookId" class="btn btn-primary btn-sm">Details</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-muted">No books available.</p>
            }
        </div>
    </div>

    @foreach (var categoryItem in Model)
    {
        <div class="tab-pane fade @(categoryItem.Category.CategoryId == Model.First().Category.CategoryId ? "show active" : "")" id="category-@categoryItem.Category.CategoryId" role="tabpanel" aria-labelledby="tab-@categoryItem.Category.CategoryId">
            <div class="row mt-3">
                @if (categoryItem.Books.Any())
                {
                    @foreach (var bookItem in categoryItem.Books)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title">@bookItem.Book.Title</h5>
                                    <ul>
                                        Authors:
                                        @foreach (var author in bookItem.Authors)
                                        {
                                            <p>@author.FirstName @author.LastName</p>
                                        }
                                    </ul>
                                </div>
                                <div class="card-footer">
                                    <!-- Action Buttons -->
                                    <a asp-controller="Book" asp-action="Edit" asp-route-id="@bookItem.Book.BookId" class="btn btn-primary btn-sm">Edit</a>
                                    <a asp-controller="Book" asp-action="Details" asp-route-id="@bookItem.Book.BookId" class="btn btn-primary btn-sm">Details</a>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted">No books available in this category.</p>
                }
            </div>
        </div>
    }
</div>
