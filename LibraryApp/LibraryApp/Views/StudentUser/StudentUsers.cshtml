@model IEnumerable<LibraryApp.Models.AssignRoleViewModel>

@{
    ViewData["Title"] = "Student";
}
<h2>Students</h2>

<!-- Link to Create a New User -->
<div class="mb-3">
    @* <a href="@Url.Action("CreateUser", "Admin")" class="btn btn-success">
    <i class="fas fa-user-plus"></i> Add New User
    </a> *@
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="CreateUser" asp-controller="Admin" class="btn btn-success">
        <i class="fas fa-user-plus"></i> Add New Student
        </a>
    }
    
</div>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Username</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)

        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                
                <td>
                    @*          bg-primary and text-light: This makes the badge background blue with white text, enhancing visibility.
                Padding (p-2): Adds padding to make the badge stand out more.
                Margin (me-1): Adds a small space (me-1) between badges if there are multiple.
                Font size: style="font-size: 1rem;" increases the text size to make it more noticeable. *@
                    @foreach (var role in user.SelectedRoleIds)
                    {
                        <span class="badge bg-primary p-2 me-1" style="font-size: 1rem;">@role</span>
                    }
                </td>
                @*<td>
                     <a asp-action="AssignRole" asp-route-id="@user.UserId" class="btn btn-sm btn-primary">
                         <i class="fas fa-user-tag"></i> Edit Roles
                     </a>
                 </td>
                *@
            </tr>
        }
    </tbody>
</table>