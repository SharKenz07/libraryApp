@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

<h2>Roles</h2>

<a asp-action="CreateRole" class="btn btn-primary"><i class="fas fa-plus"></i> Create New Role</a>

<table class="table table-striped table-hover">
	<thead class="thead-dark">
		<tr>
			<td>RoleName</td>
			<td>Actions</td>
		</tr>
	</thead>
	<tbody>
		@foreach (var role in Model)
		{
			<tr>
				<td>@role.Name</td>
				<td>
					<a asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-warning"><i class="fas fa-edit">Edit</i></a>
					<a asp-action="DeleteRole" asp-route-id="@role.Id" class="btn btn-danger"><i class="fas fa-trash-alt">Delete</i></a>
				</td>

			</tr>
		}
	</tbody>
</table>