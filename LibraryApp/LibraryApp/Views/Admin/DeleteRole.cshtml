@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "Delete Role";
}
<h2>Delete Role</h2>

<div class="alert alert-danger mt-3">
    <p><strong>Warning:</strong> Are you sure you want to delete this role?</p>
    <p>Role Name: <strong>@Model.Name</strong></p>
</div>

<form asp-action="DeleteRole" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash-alt"></i> Delete
    </button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
